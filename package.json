{
    "name": "api-typescript-node-jest",
    "version": "0.1.0",
    "description": "Base project for node/typescript applications",
    "main": "./src/index.ts",
    "scripts": {
        "build": "rimraf ./dist && tsc --p tsconfig-build.json",
        "lint": "eslint ./src ./test --ext .ts",
        "lint:fix": "eslint ./src ./test --ext .ts --fix",
        "style:check": "prettier --check 'src/**/*/*.ts' 'test/**/*/*.ts'",
        "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
        "start:dev": "nodemon -L",
        "start:prod": "yarn build && NODE_ENV=production node ./dist/index.js",
        "test": "yarn test:unit && yarn test:functional",
        "test:unit": "NODE_ENV=test ./node_modules/.bin/jest --passWithNoTests",
        "test:functional": "NODE_ENV=test ./node_modules/.bin/jest --projects ./test --passWithNoTests"
    },
    "keywords": [
        "node",
        "nodejs",
        "typescript"
    ],
    "author": "fernandozorek@gmail.com",
    "license": "MIT",
    "devDependencies": {
        "@types/compression": "1.7.0",
        "@types/cors": "2.8.10",
        "@types/express": "4.17.11",
        "@types/express-pino-logger": "4.0.2",
        "@types/http-status-codes": "1.2.0",
        "@types/jest": "26.0.20",
        "@types/lodash": "^4.14.172",
        "@types/module-alias": "2.0.0",
        "@types/mongoose": "^5.11.97",
        "@types/node": "14.14.35",
        "@types/pino": "6.3.6",
        "@types/sonic-boom": "^2.1.1",
        "@types/supertest": "2.0.10",
        "@types/swagger-ui-express": "4.1.2",
        "@types/validator": "^13.12.0",
        "@types/yamljs": "0.2.31",
        "@typescript-eslint/eslint-plugin": "4.18.0",
        "@typescript-eslint/parser": "4.18.0",
        "eslint": "7.22.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jest": "24.3.1",
        "eslint-plugin-node": "11.1.0",
        "jest": "26.6.3",
        "jest-junit": "^12.3.0",
        "lint-staged": "10.5.4",
        "nodemon": "2.0.7",
        "pino-pretty": "4.7.1",
        "prettier": "2.2.1",
        "pretty-quick": "3.1.0",
        "rimraf": "3.0.2",
        "supertest": "6.1.3",
        "ts-jest": "26.5.3",
        "ts-node": "9.1.1",
        "typescript": "^5.5.3"
    },
    "dependencies": {
        "compression": "1.7.4",
        "cors": "2.8.5",
        "express": "4.17.1",
        "express-pino-logger": "6.0.0",
        "helmet": "4.4.1",
        "http-status": "^1.5.0",
        "http-status-codes": "2.1.4",
        "lodash": "^4.17.21",
        "module-alias": "2.2.2",
        "mongodb-memory-server": "^7.3.6",
        "mongoose": "^5.13.7",
        "pino": "6.11.2",
        "swagger-ui-express": "4.1.6",
        "validator": "^13.12.0",
        "yamljs": "0.3.0"
    },
    "lint-staged": {
        "*.*": [
            "pretty-quick --staged"
        ],
        "*.{js,ts}": [
            "yarn eslint"
        ]
    }
}
